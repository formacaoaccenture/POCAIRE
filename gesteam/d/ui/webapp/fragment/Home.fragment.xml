	xmlns:core="sap.ui.core"
	xmlns:html="http://www.w3.org/1999/xhtml" >
	<Page id="homepage" showHeader="false" title="{i18n>title}">
		<content>
			<VBox width="100%" height="100%" justifyContent="Center" alignItems="Center">
				<Text text = "{i18n>app_name} \n\n\n\n\n" class = "blue bold" />
				<VBox width="80%">
					<Text text = "{i18n>welcome} David Marques"/>
					<Text text = "{i18n>lastlogin}: {oUser>/user/info/lastLogin}:"/>
