<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:u="sap.ui.unified"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns:html="http://www.w3.org/1999/xhtml" >

<Page id="upload" showHeader="false" >
				<content>
					<VBox width="100%" height="100%">
						<VBox height="100%" alignItems="Center" id="grande">
							<VBox height="40%"></VBox>
							<VBox width="42%" alignItems="End">
								<u:FileUploader id="fileUploader" name="myFileUpload" uploadUrl="upload/" width="400px" tooltip="{i18n>uploadtext}"
									class="border" uploadComplete="handleUploadComplete"/>
								<Button text="{i18n>upload}" press="onPress"/>
							</VBox>
							<VBox height="8%"></VBox>
							<VBox width="20%" alignItems="Start">
								<Label text="{i18n>uploadlabel}" class="sapUiMediumMarginTop"/>
								<RadioButton groupName="GroupA" text="{i18n>radio}" selected="true" id="a"/>
							</VBox>
						</VBox>
					</VBox>
				</content>
			</Page>
			</core:FragmentDefinition>